#!/usr/bin/env python3
"""StoryBuilder is the helper application for story building.
"""

# Official Libraries
import os
import sys

sys.path.append(os.path.join(os.path.dirname(__file__), ".."))
sys.path.append('stobu')


def main(argv: list):
    is_debug = True if [v for v in argv if v == '--debug'] else False

    # setup logger
    from stobu.util.log import logger, logging
    if is_debug:
        logger.setLevel(logging.DEBUG)
    logger.debug("Initialized Logger.")

    # application initialize
    from stobu.application import Application
    app = Application()

    # run application
    return app.run()


if __name__ == '__main__':
    sys.exit(main(sys.argv))
